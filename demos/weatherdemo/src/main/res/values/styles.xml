<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Toolbar Text Style-->
    <style name="Toolbar.TitleText"
           parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--SearchView Style-->
    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="searchBackground">@color/colorWhite</item>
        <!-- Change clear text icon-->
        <item name="searchCloseIcon">@mipmap/ic_clear</item>
        <!-- Change up icon-->
        <item name="searchBackIcon">@mipmap/ic_arrow_back</item>
        <!-- Change icon for the suggestions-->
        <item name="searchSuggestionIcon">@mipmap/ic_history</item>
        <!-- Change background for the suggestions list view-->
        <item name="searchSuggestionBackground">@color/colorWhite</item>
        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="android:textColor">@color/colorBlack</item>
        <!-- Change hint text color for edit text-->
        <item name="android:textColorHint">@color/colorSecondary</item>
        <!-- Hint for edit text-->
        <item name="android:hint">@string/search_hint</item>
    </style>


</resources>
